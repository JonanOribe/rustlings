                "args": [
                    "run",
                    "--bin=rustlings",
                    "--package=rustlings"
                ]
            },
            "args": []
        },
        {
            "name": "Debug unit tests in executable 'rustlings'",
            "type": "lldb",
            "request": "launch",
            "cargo": {
                "args": [
                    "test",
                    "--bin=rustlings",
                    "--package=rustlings"
                ]
            }
        },
        {
            "name": "Debug integration test 'integration_tests'",
            "type": "lldb",
            "request": "launch",
